{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {
    "text": "Education Completion Rate by State, Malaysia",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "start"
  },
  "width": 1000,
  "height": 600,
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "selected_year",
      "value": 2022,
      "bind": {
        "input": "select",
        "options": [2016, 2017, 2019, 2020, 2022],
        "labels": ["2016", "2017", "2019", "2020", "2022"],
        "name": "Select Year: "
      }
    },
    {
      "name": "selected_stage",
      "value": "secondary_upper",
      "bind": {
        "input": "select",
        "options": ["primary", "secondary_lower", "secondary_upper"],
        "labels": ["Primary", "Lower Secondary", "Upper Secondary"],
        "name": "Education Stage: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/GurgobindSingh/FIT3179_Assignment2/main/malaysia_map.topojson",
        "format": {"type": "topojson", "feature": "ne_10m_graticules_1"}
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#cccccc",
        "strokeWidth": 0.5,
        "fill": null
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/GurgobindSingh/FIT3179_Assignment2/main/choropleth_map_education.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "filter": "toNumber(datum.year) == selected_year"
        },
        {
          "filter": "datum.stage == selected_stage"
        },
        {
          "filter": "datum.sex == 'both'"
        },
        {
          "lookup": "state",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/GurgobindSingh/FIT3179_Assignment2/main/malaysia_map.topojson",
              "format": {"type": "topojson", "feature": "my"}
            },
            "key": "properties.name"
          },
          "as": "geo"
        },
        {
          "calculate": "toNumber(datum['completion'])",
          "as": "Completion_Rate"
        },
        {
          "calculate": "datum['Completion_Rate'] < 97 ? '95â€“97%' : datum['Completion_Rate'] < 98 ? '97â€“98%' : datum['Completion_Rate'] < 99 ? '98â€“99%' : datum['Completion_Rate'] < 100 ? '99â€“100%' : '100â€“103%'",
          "as": "Completion_Level"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "#ffffff", "strokeWidth": 0.5},
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "Completion_Level",
          "type": "ordinal",
          "scale": {
            "domain": [
              "95â€“97%",
              "97â€“98%",
              "98â€“99%",
              "99â€“100%",
              "100â€“103%"
            ],
            "range": ["#fee5d9", "#fcae91", "#fb6a4a", "#de2d26", "#a50f15"]
          },
          "legend": {
            "title": "Education Completion Rate",
            "titleFontSize": 14,
            "labelFontSize": 12,
            "symbolSize": 400,
            "orient": "right",
            "direction": "vertical",
            "offset": 20
          }
        },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {"field": "Completion_Rate", "type": "quantitative", "format": ".2f", "title": "Completion Rate (%)"},
          {"field": "Completion_Level", "type": "nominal", "title": "Completion Level"},
          {"field": "stage", "type": "nominal", "title": "Education Stage"},
          {"field": "year", "type": "ordinal", "title": "Year"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {"lon": 101.7, "lat": 3.15, "label": "â˜… KL", "stage": "primary"}
        ]
      },
      "transform": [
        {"filter": "selected_stage == 'primary'"},
        {"filter": "selected_year == 2019 || selected_year == 2016"}
      ],
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "dx": 0,
        "dy": -10,
        "fontSize": 11,
        "fontWeight": "bold",
        "color": "#ffffff",
        "stroke": "#000000",
        "strokeWidth": 3
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "text": {"field": "label", "type": "nominal"}
      }
    },
    {
      "data": {
        "values": [
          {"lon": 102.25, "lat": 6.13, "label": "â˜… Kelantan 109%!", "stage": "secondary_upper"}
        ]
      },
      "transform": [
        {"filter": "selected_stage == 'secondary_upper'"},
        {"filter": "selected_year == 2019"}
      ],
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "dx": 0,
        "dy": 10,
        "fontSize": 11,
        "fontWeight": "bold",
        "color": "#ffffff",
        "stroke": "#000000",
        "strokeWidth": 3
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "text": {"field": "label", "type": "nominal"}
      }
    },
    {
      "data": {
        "values": [
          {"year": 2016, "stage": "primary", "annotation": "ðŸ’¡ Strong primary education: Most states >99% completion", "lon": 101.5, "lat": 7.5},
          {"year": 2016, "stage": "secondary_lower", "annotation": "ðŸ’¡ Lower secondary challenge: Labuan 78%, Sabah 90%", "lon": 101.5, "lat": 7.5},
          {"year": 2016, "stage": "secondary_upper", "annotation": "ðŸ’¡ Upper secondary gap: Perlis 91%, Putrajaya 109%", "lon": 101.5, "lat": 7.5},
          {"year": 2017, "stage": "primary", "annotation": "ðŸ’¡ Primary excellence maintained across all states", "lon": 101.5, "lat": 7.5},
          {"year": 2017, "stage": "secondary_lower", "annotation": "ðŸ’¡ Remarkable improvement: Labuan jumps to 99%, Putrajaya leads 108%", "lon": 101.5, "lat": 7.5},
          {"year": 2017, "stage": "secondary_upper", "annotation": "ðŸ’¡ Pahang faces challenges: Drops to 90.8% completion", "lon": 101.5, "lat": 7.5},
          {"year": 2019, "stage": "primary", "annotation": "ðŸ’¡ Primary steady: KL lowest at 91.6%, most states near 100%", "lon": 101.5, "lat": 7.5},
          {"year": 2019, "stage": "secondary_lower", "annotation": "ðŸ’¡ Federal territories excel: Putrajaya, Terengganu >100%", "lon": 101.5, "lat": 7.5},
          {"year": 2019, "stage": "secondary_upper", "annotation": "ðŸ’¡ Notable: Kelantan surges to 109.2% completion rate!", "lon": 101.5, "lat": 7.5},
          {"year": 2020, "stage": "primary", "annotation": "ðŸ’¡ COVID-19 starts: Primary rates remain strong >95%", "lon": 101.5, "lat": 7.5},
          {"year": 2020, "stage": "secondary_lower", "annotation": "ðŸ’¡ Pandemic impact: Some states show slight decline", "lon": 101.5, "lat": 7.5},
          {"year": 2020, "stage": "secondary_upper", "annotation": "ðŸ’¡ Major drop: Johor falls to 89.2%, pandemic disruption", "lon": 101.5, "lat": 7.5},
          {"year": 2022, "stage": "primary", "annotation": "ðŸ’¡ Post-pandemic recovery: Primary education stabilizes", "lon": 101.5, "lat": 7.5},
          {"year": 2022, "stage": "secondary_lower", "annotation": "ðŸ’¡ Bounce back: Most states return to 95-100% range", "lon": 101.5, "lat": 7.5},
          {"year": 2022, "stage": "secondary_upper", "annotation": "ðŸ’¡ Recovery ongoing: Most states above 95%, gradual improvement", "lon": 101.5, "lat": 7.5}
        ]
      },
      "transform": [
        {"filter": "datum.year == selected_year"},
        {"filter": "datum.stage == selected_stage"}
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "top",
        "fontSize": 12,
        "fontWeight": "normal",
        "color": "#2c7bb6",
        "dx": 5,
        "dy": 5
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "text": {"field": "annotation", "type": "nominal"}
      }
    }
  ]
}
