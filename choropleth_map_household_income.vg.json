{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {
    "text": "Median Household Income by State, Malaysia",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "start"
  },
  "params": [
    {
      "name": "selected_year",
      "value": 2022,
      "bind": {
        "input": "select",
        "options": [2016, 2019, 2020, 2022],
        "labels": ["2016", "2019", "2020", "2022"],
        "name": "Select Year: "
      }
    }
  ],
  "vconcat": [
    {
      "width": 900,
      "height": 500,
      "projection": {"type": "equalEarth"},
      "view": {"stroke": "black", "strokeWidth": 2, "fill": "#e6f3ff"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/GurgobindSingh/FIT3179_Assignment2/main/malaysia_map.topojson",
        "format": {"type": "topojson", "feature": "ne_10m_graticules_1"}
      },
      "mark": {"type": "geoshape", "stroke": "#cccccc", "strokeWidth": 0.5, "fill": null}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/GurgobindSingh/FIT3179_Assignment2/main/choropleth_map_household_income.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {"filter": "toNumber(datum.year) == selected_year"},
        {
          "lookup": "state",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/GurgobindSingh/FIT3179_Assignment2/main/malaysia_map.topojson",
              "format": {"type": "topojson", "feature": "my"}
            },
            "key": "properties.name"
          },
          "as": "geo"
        },
        {"calculate": "toNumber(datum['income_median'])", "as": "Median_Income"},
        {
          "calculate": "datum['Median_Income'] <= 4000 ? 'Low (â‰¤ RM4k)' : datum['Median_Income'] <= 6000 ? 'Lower-Middle (RM4kâ€“6k)' : datum['Median_Income'] <= 8000 ? 'Upper-Middle (RM6kâ€“8k)' : datum['Median_Income'] <= 10000 ? 'High (RM8kâ€“10k)' : 'Very High (> RM10k)'",
          "as": "Income_Level"
        }
      ],
      "params": [
        {
          "name": "hover",
          "select": {"type": "point", "on": "mouseover", "clear": "mouseout"}
        },
        {
          "name": "income_sel",
          "select": {"type": "point", "fields": ["Income_Level"]},
          "bind": "legend"
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "stroke": {
          "condition": {"param": "hover", "value": "black"},
          "value": "#ffffff"
        },
        "strokeWidth": {
          "condition": {"param": "hover", "value": 2},
          "value": 0.5
        },
        "color": {
          "field": "Income_Level",
          "type": "ordinal",
          "scale": {
            "domain": [
              "Low (â‰¤ RM4k)",
              "Lower-Middle (RM4kâ€“6k)",
              "Upper-Middle (RM6kâ€“8k)",
              "High (RM8kâ€“10k)",
              "Very High (> RM10k)"
            ],
            "range": ["#fee5d9", "#fcae91", "#fb6a4a", "#de2d26", "#a50f15"]
          },
          "legend": {
            "title": "Household Income (RM)",
            "titleFontSize": 11,
            "labelFontSize": 10,
            "symbolSize": 200,
            "orient": "right",
            "direction": "vertical",
            "offset": 10,
            "titleLimit": 120,
            "labelLimit": 80
          }
        },
        "opacity": {
          "condition": {"param": "income_sel", "value": 1},
          "value": 0.2
        },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {"field": "Median_Income", "type": "quantitative", "format": ",", "title": "Median Income (RM)"},
          {"field": "Income_Level", "type": "nominal", "title": "Income Category"},
          {"field": "year", "type": "ordinal", "title": "Year"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {"year": 2016, "annotation": "ðŸ’¡ KL leads at RM9,073, which is 3x higher than Kelantan (RM3,079), revealing stark regional income disparity", "lon": 101.5, "lat": 8.2},
          {"year": 2019, "annotation": "ðŸ’¡ Pre-pandemic peak year as KL reaches RM10,549 while the income gap continues to widen", "lon": 101.5, "lat": 8.2},
          {"year": 2020, "annotation": "ðŸ’¡ COVID-19 pandemic causes most states to see income decline, particularly affecting middle-income states", "lon": 101.5, "lat": 8.2},
          {"year": 2022, "annotation": "ðŸ’¡ Economic recovery begins with KL at RM10,234 and Selangor nearly RM10k, but rural gaps remain", "lon": 101.5, "lat": 8.2}
        ]
      },
      "transform": [{"filter": "datum.year == selected_year"}],
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "top",
        "fontSize": 16,
        "fontWeight": "bold",
        "color": "#de2d26",
        "dx": 5,
        "dy": 5
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "text": {"field": "annotation", "type": "nominal"}
      }
    }
      ]
    }
  ]
}
