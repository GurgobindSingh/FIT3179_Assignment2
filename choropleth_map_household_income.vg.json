{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {
    "text": "Median Household Income by State, Malaysia (Select Year)",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "start"
  },
  "width": 1000,
  "height": 600,
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "selected_year",
      "value": 2022,
      "bind": {
        "input": "select",
        "options": [2016, 2019, 2020, 2022],
        "labels": ["2016", "2019", "2020", "2022"],
        "name": "Select Year: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/GurgobindSingh/FIT3179_Assignment2/main/malaysia_map.topojson",
        "format": {"type": "topojson", "feature": "ne_10m_graticules_1"}
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#cccccc",
        "strokeWidth": 0.5,
        "fill": null
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/GurgobindSingh/FIT3179_Assignment2/main/choropleth_map_household_income.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "filter": "toNumber(datum.year) == selected_year"
        },
        {
          "lookup": "state",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/GurgobindSingh/FIT3179_Assignment2/main/malaysia_map.topojson",
              "format": {"type": "topojson", "feature": "my"}
            },
            "key": "properties.name"
          },
          "as": "geo"
        },
        {
          "calculate": "toNumber(datum['income_median'])",
          "as": "Median_Income"
        },
        {
          "calculate": "datum['Median_Income'] <= 4000 ? 'Low (â‰¤ RM4k)' : datum['Median_Income'] <= 6000 ? 'Lower-Middle (RM4kâ€“6k)' : datum['Median_Income'] <= 8000 ? 'Upper-Middle (RM6kâ€“8k)' : datum['Median_Income'] <= 10000 ? 'High (RM8kâ€“10k)' : 'Very High (> RM10k)'",
          "as": "Income_Level"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "#ffffff", "strokeWidth": 0.5},
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "Income_Level",
          "type": "ordinal",
          "scale": {
            "domain": [
              "Low (â‰¤ RM4k)",
              "Lower-Middle (RM4kâ€“6k)",
              "Upper-Middle (RM6kâ€“8k)",
              "High (RM8kâ€“10k)",
              "Very High (> RM10k)"
            ],
            "range": ["#fee5d9", "#fcae91", "#fb6a4a", "#de2d26", "#a50f15"]
          },
          "legend": {
            "title": "Median Household Income (RM)",
            "titleFontSize": 14,
            "labelFontSize": 12,
            "symbolSize": 400,
            "orient": "right",
            "direction": "vertical",
            "offset": 20
          }
        },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {"field": "Median_Income", "type": "quantitative", "format": ",", "title": "Median Income (RM)"},
          {"field": "Income_Level", "type": "nominal", "title": "Income Category"},
          {"field": "year", "type": "ordinal", "title": "Year"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {"year": 2016, "annotation": "ðŸ’¡ Key Insight: KL leads at RM9,073, 3x higher than Kelantan (RM3,079) â€” Stark regional income disparity", "lon": 101.5, "lat": 7.5},
          {"year": 2019, "annotation": "ðŸ’¡ Key Insight: Pre-pandemic peak â€” KL reaches RM10,549, income gap continues to widen", "lon": 101.5, "lat": 7.5},
          {"year": 2020, "annotation": "ðŸ’¡ Key Insight: COVID-19 impact â€” Most states see income decline, particularly middle-income states", "lon": 101.5, "lat": 7.5},
          {"year": 2022, "annotation": "ðŸ’¡ Key Insight: Recovery begins â€” KL at RM10,234, Selangor nearly RM10k, but rural gap remains", "lon": 101.5, "lat": 7.5}
        ]
      },
      "transform": [
        {"filter": "datum.year == selected_year"}
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "top",
        "fontSize": 12,
        "fontWeight": "normal",
        "color": "#2c7bb6",
        "dx": 5,
        "dy": 5
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "text": {"field": "annotation", "type": "nominal"}
      }
    },
    {
      "data": {
        "values": [
          {"lon": 102.25, "lat": 6.13, "label": "Lowest Income"}
        ]
      },
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "dx": 0,
        "dy": 10,
        "fontSize": 11,
        "fontWeight": "bold",
        "color": "#000000",
        "stroke": "#ffffff",
        "strokeWidth": 2
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "text": {"field": "label", "type": "nominal"}
      }
    }
  ]
}
