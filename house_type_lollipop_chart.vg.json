{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/GurgobindSingh/FIT3179_Homework10/main/housing_prices.csv",
    "format": {
      "type": "csv",
      "parse": {"Year": "number", "Price": "number", "Type": "string"}
    }
  },
  "title": {
    "text": "Housing Affordability in Malaysia by Property Type (2012â€“2022)",
    "fontSize": 18,
    "anchor": "start",
    "fontWeight": "bold"
  },
  "params": [
    {
      "name": "YearSelect",
      "bind": {
        "input": "select",
        "options": [2012, 2013, 2014, 2015, 2016, 2017, 2018, 2019, 2020, 2021, 2022],
        "name": "Select Year: "
      },
      "value": 2022
    }
  ],
  "transform": [
    {"filter": "datum.Year == YearSelect"},
    {
      "window": [{"op": "rank", "as": "rank_desc"}],
      "sort": [{"field": "Price", "order": "descending"}],
      "groupby": ["Year"]
    }
  ],
  "layer": [
    {
      "mark": {"type": "rule", "color": "#B0BEC5", "strokeWidth": 2},
      "encoding": {
        "x": {
          "field": "Type",
          "type": "nominal",
          "title": "Property Type",
          "sort": {"field": "Price", "order": "descending"},
          "axis": {"labelAngle": -20, "labelFontSize": 11}
        },
        "y": {"value": 0},
        "y2": {"field": "Price"}
      }
    },
    {
      "mark": {"type": "circle", "size": 150},
      "encoding": {
        "x": {"field": "Type", "type": "nominal"},
        "y": {
          "field": "Price",
          "type": "quantitative",
          "title": "Average Price (RM)",
          "axis": {"grid": true}
        },
        "color": {
          "condition": [
            {"test": "datum.rank_desc == 1", "value": "#FFD700"},
            {"test": "datum.rank_desc == 2", "value": "#C0C0C0"},
            {"test": "datum.rank_desc == 3", "value": "#CD7F32"}
          ],
          "value": "#90A4AE"
        },
        "tooltip": [
          {"field": "Type", "title": "Property Type"},
          {"field": "Year", "title": "Year"},
          {"field": "Price", "title": "Average Price (RM)", "format": ",.0f"},
          {"field": "rank_desc", "title": "Rank"}
        ]
      }
    },
    {
      "transform": [{"filter": "datum.rank_desc == 1"}],
      "mark": {
        "type": "text",
        "dy": -12,
        "align": "center",
        "fontSize": 12,
        "fontWeight": "bold",
        "fill": "black"
      },
      "encoding": {
        "x": {"field": "Type"},
        "y": {"field": "Price"},
        "text": {"value": "Most Expensive"}
      }
    },
    {
      "transform": [{"filter": "datum.rank_desc == 4"}],
      "mark": {
        "type": "text",
        "dy": -12,
        "align": "center",
        "fontSize": 12,
        "fontWeight": "bold",
        "fill": "black"
      },
      "encoding": {
        "x": {"field": "Type"},
        "y": {"field": "Price"},
        "text": {"value": "Most Affordable"}
      }
    },
    {
      "data": {
        "values": [
          {"Year": 2012, "event": "Post-2008 housing rebound"},
          {"Year": 2014, "event": "Pre-GST housing demand peak"},
          {"Year": 2016, "event": "Oil price slowdown effects"},
          {"Year": 2019, "event": "Pre-COVID steady market"},
          {"Year": 2020, "event": "COVID-19 market drop"},
          {"Year": 2022, "event": "Post-COVID recovery"}
        ]
      },
      "transform": [{"filter": "datum.Year == YearSelect"}],
      "mark": {
        "type": "text",
        "x": 450,
        "y": 40,
        "align": "center",
        "fontSize": 13,
        "fontStyle": "italic",
        "fontWeight": "bold",
        "fill": "#37474F",
        "background": "#ECEFF1",
        "cornerRadius": 5,
        "padding": 5
      },
      "encoding": {"text": {"field": "event"}}
    }
  ]
}
